module attributes { veridise.lang = "llzk"} {
  struct.def @ConstraintPod {
    function.def @compute(
        %0: !pod.type<[@n: !felt.type]>,
        %1: !pod.type<[@n: !felt.type]>
    ) -> !struct.type<@ConstraintPod> {
      %self = struct.new : !struct.type<@ConstraintPod>
      function.return %self : !struct.type<@ConstraintPod>
    }
    function.def @constrain(
        %self: !struct.type<@ConstraintPod>,
        %0: !pod.type<[@n: !felt.type]>,
        %1: !pod.type<[@n: !felt.type]>
    )  {
      constrain.eq %0, %1 : !pod.type<[@n: !felt.type]>
      function.return
    }
  }
}
//CHECK-LABEL:  function.def @constrain(
//CHECK-SAME:      %[[A1:[0-9a-zA-Z_\.]+]]: !pod.type<[@n: !felt.type]>,
//CHECK-SAME:      %[[A2:[0-9a-zA-Z_\.]+]]: !pod.type<[@n: !felt.type]>
//CHECK-SAME:   ) attributes {function.allow_constraint} {
//CHECK-NEXT:     constrain.eq %[[A1]], %[[A2]] : 
//CHECK-SAME:         !pod.type<[@n: !felt.type]>, !pod.type<[@n: !felt.type]>
//CHECK-NEXT:     function.return 
//CHECK-NEXT:   }

