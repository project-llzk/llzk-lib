      function.return %self : !struct.type<@ComponentC>
    }

    function.def @constrain(%p: !struct.type<@ComponentC>) {
      // expected-error@+1 {{'struct.readm' op has wrong type; expected 'index', got '!felt.type}}
      %0 = struct.readm %p[@f2] : !struct.type<@ComponentC>, !felt.type
      function.return
    }
  }
}
