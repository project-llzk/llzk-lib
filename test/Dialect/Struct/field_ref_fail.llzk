    struct.member @f : !felt.type // expected-note {{member defined here}}
    function.def @compute() -> !struct.type<@PrivateComponent> {
      %self = struct.new : !struct.type<@PrivateComponent>
      function.return %self : !struct.type<@PrivateComponent>
    }
    function.def @constrain(%self: !struct.type<@PrivateComponent>)  { function.return }
  }

  struct.def @ComponentN {
    function.def @compute(%0: !struct.type<@PrivateComponent>, %1: !felt.type) -> !struct.type<@ComponentN> {
      %self = struct.new : !struct.type<@ComponentN>
      // expected-error@+1 {{'struct.readm' op cannot read from private member of struct "@PrivateComponent"}}
      %res = struct.readm %0[@f] : !struct.type<@PrivateComponent>, !felt.type
      function.return %self : !struct.type<@ComponentN>
    }
    function.def @constrain(%self: !struct.type<@ComponentN>, %0: !struct.type<@PrivateComponent>, %1: !felt.type)  { function.return }
